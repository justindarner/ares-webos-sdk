{
    "requireCommands": ["git"],
    "basic": {
        "type": "webapp",
        "path": "$cli-root/templates/tv-templates/bootplate-web",
        "description": "basic web app for webOS TV",
        "metadata": {
            "id": "webappinfo"
        },
        "deps": ["webicon"],
        "default": true
    },
    "hosted_webapp": {
        "type": "Hosted Web App",
        "path": "$cli-root/templates/tv-templates/hosted-webapp",
        "description": "hosted web app for webOS TV",
        "metadata": {
            "id": "webappinfo"
        },
        "deps": ["webicon"]
    },
    "webappinfo": {
        "type": "webappinfo",
        "path": "$cli-root/templates/tv-templates/appinfo/appinfo.json",
        "description": "appinfo.json for web app"
    },
    "js_service": {
        "type": "jsservice",
        "path": "$cli-root/templates/tv-templates/js-service",
        "description": "js service for webOS TV",
        "metadata": {
            "id": "jsserviceinfo"
        }
    },
    "jsserviceinfo": {
        "type": "jsserviceinfo",
        "path": [
            "$cli-root/templates/tv-templates/serviceinfo/services.json",
            "$cli-root/templates/tv-templates/serviceinfo/package.json"
        ],
        "description": "services.json, package.json for JS service"
    },
    "webicon": {
        "type": "icon",
        "path": "$cli-root/templates/tv-templates/webicon",
        "description": "web app icon files [80x80, 130x130]"
    }
}
